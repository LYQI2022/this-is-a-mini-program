
.content {
	display: flex;
	flex-direction: column;
	padding: 20rpx;
}
.text-area {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-top: 40rpx;
	/* background-color: skyblue; */
}
.left {
	display: flex;
}
.right {
	text-align: center;
	display: flex;
}
.avatar-wrapper {
	margin-right: 20rpx;
}
.avatar {
	width: 112rpx;
	height: 112rpx;
	border-radius: 50%;
}
.img {
	width: 350px;
	height: 350px;
	border-radius: 50%;
}

